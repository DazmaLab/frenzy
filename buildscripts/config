#!/bin/sh
#BLOCKSIZE="32768"	# uzip block size
#BLOCKSIZE="65536"	# uzip block size
BLOCKSIZE="130560"	# uzip block size

BUILDDATE=`date "+%Y%m%d%H%M"`
BD=`date "+%d.%m.%Y %H:%M"`

FRENZY_TYPE="std"
#FRENZY_TYPE="ext"
FRENZY_LANG="ru"
#FRENZY_LANG="en"


FRENZY_ISOIMAGE="frenzy-1.0p1-${FRENZY_TYPE}-${FRENZY_LANG}-${BUILDDATE}.iso"
FRENZY_VOL="frenzy-1.0p1-${FRENZY_TYPE}-${FRENZY_LANG}"

#       |---------+---------+---------+---------+---------+---------+--|------+
VERSION="Frenzy 1.0-p1 (Dreamchild)                            [ ${BD} ]"


# ADDITIONAL PATCHES
# Package patches
# available options: fix relink rm strip
# 'relink' required only if no unionfs available
PATCHES="fix rm strip"
# Post-install patches
# available options: create config patch relink final
# 'relink' required only if no unionfs available
POSTPATCHES="create config patch final"


# === PLEASE DO NOT EDIT BELOW THIS LINE IF YOU ARE NOT SURE ===
# === ποφαμυκστα ξε ςεδαλτιςυκτε δαμεε εσμι χω ξε υχεςεξω ===


KERNCONFNAME="FRENZY"   # kernel config file
MAKECONF="make.conf"    # make.conf file
MAKE_OPTIONS=""
RMFILE="rmfiles"        # what will be removed from base sys

FRENZY_DIR="frenzybuild"
FRENZY_CD="${FRENZY_DIR}/cd"		# path to Frenzy CD files
FRENZY_FS="${FRENZY_DIR}/fs"		# path to Frenzy file system
FRENZY_BUILD="${FRENZY_DIR}/build"	# path to build dir
#SRCDIR="/usr/src"       		# main source dir
SRCDIR="${FRENZY_DIR}/src"		# main source dir
FRENZY_ISO="ISO"        		# path to ISO image


PKG_FREEBSD="packages/FreeBSD.${FRENZY_TYPE}"
PKG_FRENZY="packages/Frenzy"

LOG_DIR="log"

